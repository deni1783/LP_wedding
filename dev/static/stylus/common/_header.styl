header
  background mainColor url("../img/general/header-bg.jpg") center no-repeat
  height: 70px
  color: #fff


  .container
    display: flex
    justify-content: space-between
    align-items: center
    height: 70px
    padding: 15px 0


.header-logo
  position: relative
  top: 35px
  //left: 50%
  //margin-left: -70px


.header-about

  span
    display: block
    font-size: 16px

.header-company__name
  margin-bottom: 5px
  font-family: boldFont
  text-transform: uppercase

.header-company__descr
  font-family: mainFont
  
  
.header-phone
  position: relative
  padding-left: 35px

  &:before
    content: ''
    position: absolute
    left: 0
    top: 50%
    margin-left: -12px
    display: block
    width: 25px
    height: 25px
    background: url("../img/svg/phone.svg") 0 0 no-repeat
    background-size 100%


  a
    display: block
    color: #fff
    font-family: boldFont
    font-size: 20px

    &:first-child
      margin-bottom: 5px



.g-btn
  display: inline-block
  height: 30px
  border: 1px solid #fff
  line-height: 28px
  border-radius 20px
  padding: 0 20px
  color: #fff
  background-color: mainColor
  cursor: pointer
  transition all linear .3s

  &:hover
    background-color: #fff
    color: mainColor